<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.dao.RefundDao">
  
 <insert id="addRefund">
    insert into refund (oid,refundreason,refundtime,status)
    values (#{oid},#{refundreason},#{refundtime},#{status}) 
 </insert>
 
 <delete id="deleteRefundbyOID">
 delete from refund where oid = #{oid}
 </delete>
 
 <update id="editRefund">
   update refund set
     refundreason = #{refundreason},
     refundtime = #{refundtime},
     status = #{status}
   where oid = #{oid}
 </update>
 
 <select id="showRefundbyOID">
  select * from refund
  where oid = #{oid}
 </select>

</mapper>